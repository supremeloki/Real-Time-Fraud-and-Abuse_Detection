# Environment Variables Template for Fraud Detection System
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fraud_db
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_EVENTS=ride_events
KAFKA_TOPIC_FRAUD_ALERTS=fraud_alerts

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1

# Model Configuration
MODEL_VERSION=latest
THRESHOLD_HIGH_RISK=0.8
THRESHOLD_MEDIUM_RISK=0.5

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Feature Store Configuration
FEATURE_STORE_HOST=localhost
FEATURE_STORE_PORT=6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration (Use strong passwords in production)
JWT_SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000